<div class="usersearch-container">
  <div class="search-container">
    <h1 class="signup-title">Hello {{user.username}}</h1>
    <div class="ingredient-container">
      <div class="ingredient-label">
        <label for="ingredient-1">Ingredient No 1:</label>
        <label for="ingredient-2">Ingredient No 2:</label>
        <label for="ingredient-3">Ingredient No 3:</label>
      </div>
      <div class="ingredient-input">
        <input id="ingredient-1" type="text" placeholder="e.g. tomatoes">
        <input id="ingredient-2" type="text" placeholder="e.g. sal">
        <input id="ingredient-3" type="text" placeholder="e.g. pepper">
      </div>
    </div>

    <button class="btn-colletions" id="btn-searchRecipes" type="submit">Search Recipes</button>
  </div>
  <div class="found-recipes-container">
    <h1 class="signup-title">Magic Recipes Found:</h1>
    <div id="found-recipes">
    </div>
  </div>
</div>