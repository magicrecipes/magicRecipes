<div class="userViewRecipe-container">
  <div class="viewRecipe-container">
    <h3>Instructions:</h3>
    <p>{{recipeDetail.instructions}}</p>
    <div>
      <h3>Steps:</h3>
      {{#each recipeDetail.analyzedInstructions.0.steps}}
      <h4>Number {{this.number}}:</h4>
      <p>{{this.step}}</p>
      {{/each}}
    </div>
  </div>
  <div class="ingredients-conntainer">
    <h1>{{recipeDetail.title}}</h1>
    <img src="{{recipeDetail.image}}" alt="{{recipeDetail.title}}">
    <div>
      <h3>Information:</h3>
      <p>Ready in minutes: {{recipeDetail.readyInMinutes}}</p>
      <p>Servings: {{recipeDetail.servings}}</p>
      <p>Price per serving: $ {{recipeDetail.pricePerServing}}</p>
    </div>
    <div>
      <h3>Ingredients:</h3>
      <ol>
        {{#each recipeDetail.extendedIngredients}}
        <div id="ing-li">
          <li>{{this.name}}.</li>
          <p>Amount: {{this.amount}} {{this.unit}}.</p>
 
        </div>
        {{/each}}
      </ol>
    </div>
  </div>
</div>


<form action="/recipes/createRecipe" method="POST">
  
  <input id="apiId" type="hidden" name="apiId" value="{{recipeDetail.apiId}}">
  <input id="title" type="hidden" name="title" value="{{recipeDetail.title}}">
  <input id="readyInMinutes" type="hidden" name="readyInMinutes" 
    value="{{recipeDetail.readyInMinutes}}">
    <input id="image" type="hidden" name="image" value="{{recipeDetail.image}}">
  <input id="cuisines" type="hidden" name="cuisines"  value="{{recipeDetail.cuisines}}">
  <input id="servings" type="hidden" name="servings"  value="{{recipeDetail.servings}}">
  <input id="extendedIngredients" type="text" name="extendedIngredients" 
    value="{{list}}">
  <input id="instructions" type="hidden" name="instructions" 
    value="{{recipeDetail.instructions}}">
    <input id="analizedInstructions" type="hidden" name="analizedInstructions" 
    value="{{recipeDetail.analyzedInstructions.0.steps}}">

  <button>Add</button>
</form>